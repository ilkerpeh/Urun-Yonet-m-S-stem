@using ÜrünYönetimSistemi.Models.Entity
@model List<TBLURUNOZELLIKLERI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ÖZELLİĞİ ID</th>
        <th>ÖZELLİK ADI</th>
        <th>ÖZELİK DEĞERİ</th>
        <th>ÜRÜN ID</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <th>@urn.URUNOZELLIGIID</th>
            <td>@urn.OZELLIKADI</td>
            <td>@urn.OZELLIKDEGERI</td>
            <td>@urn.URUNID</td>
            <td><a href="/UrunÖzellikleri/SIL/@urn.URUNOZELLIGIID" class="btn btn-danger">SİL</a></td>
            <td><a href="/UrunÖzellikleri/ÜrünÖzellikleriGetir/@urn.URUNOZELLIGIID" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
        }
    </tbody>
</table>
<a href="/UrunÖzellikleri/YeniUrunÖzellikleri/" class="btn btn-primary">YENİ ÜRÜN ÖZELLİĞİ EKLE</a>

